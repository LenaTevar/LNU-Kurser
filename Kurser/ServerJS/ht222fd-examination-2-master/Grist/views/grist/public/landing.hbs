{{>flash}}
{{#if data.myGists.length}}
<div class="list-group">
    <a href="/" class="list-group-item list-group-item-dark">All Tags</a>
    {{#each data.tags}}
    <a href="/tag/{{this}}" class="list-group-item list-group-item-action">{{this}}</a>
    {{/each}}
</div>


<div class="d-flex flex-row flex-wrap justify-content-center">
    {{#each data.myGists}}
    <div class="card p-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">By: {{author}}</h6>
            <p class="card-text code">{{contentShort}}</p>
            <h6 class="card-subtitle mb-2 text-muted">Tags: {{tags}}</h6>
            <a href="/gist/{{id}}" class="card-link">Gist link</a>
        </div>
    </div>

    {{/each}}
</div>
{{else}}
<div class="alert alert-info" role="alert">
    No gists available at the moment.
</div>
{{/if}}